<!-- bg_shape.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF"/> <!-- 배경색 (흰색) -->
    <corners android:radius="16dp"/> <!-- 모서리 반경 설정 -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
    <stroke
        android:width="1dp"
        android:color="#DDDDDD"/> <!-- 테두리 색상 (연한 회색) -->
</shape>
