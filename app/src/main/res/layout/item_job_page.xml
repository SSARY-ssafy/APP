            android:id="@+id/tv_company_name_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="회사명"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingStart="8dp"/>

        <TextView
            android:id="@+id/tv_job_position_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="채용 직무"
            android:textSize="14sp"
            android:textColor="#757575"/>
    </LinearLayout>

    <!-- 세 번째 공고 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_d_day_3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="D-1"
            android:gravity="center"
            android:background="@drawable/bg_circle_orange"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/tv_company_name_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="회사명"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingStart="8dp"/>

        <TextView
            android:id="@+id/tv_job_position_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="채용 직무"
            android:textSize="14sp"
            android:textColor="#757575"/>
    </LinearLayout>

    <!-- 네 번째 공고 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_d_day_4"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="D-1"
            android:gravity="center"
            android:background="@drawable/bg_circle_orange"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/tv_company_name_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="회사명"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingStart="8dp"/>

        <TextView
            android:id="@+id/tv_job_position_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="채용 직무"
            android:textSize="14sp"
            android:textColor="#757575"/>
    </LinearLayout>

</LinearLayout>
